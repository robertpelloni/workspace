		"serena": {
			"command": "uv",
			"type": "stdio",
			"transport": "stdio",
			"args": [
				"run",
				"--directory",
				"C:\\Users\\hyper\\serena\\",
				"serena",
				"start-mcp-server",
				"--context",
				"ide-assistant",
				"--project",
				"C:\\Users\\hyper\\fwber\\"
			]
		},
		"sequential-thinking": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-sequential-thinking"
			]
		},
		"codex-mcp-server": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"codex-mcp-server"
			]
		},
		"gemini-mcp-tool": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"gemini-mcp-tool"
			]
		},
		"filesystem": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-filesystem",
				"C:\\Users\\hyper\\fwber\\"
			]
		},
		"memory": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-memory"
			]
		},
		"everything": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-everything"
			]
		},
		"zen-mcp-server": {
			"command": "uv",
			"args": [
				"run",
				"--directory",
				"C:\\Users\\hyper\\zen-mcp-server\\",
				"zen-mcp-server"
			],
			"env": {
				"OPENAI_API_KEY": "${OPENAI_API_KEY}",
				"OPENROUTER_API_KEY": "${OPENROUTER_API_KEY}",
				"GEMINI_API_KEY": "${GEMINI_API_KEY}"
			}
		},
		"chroma-knowledge": {
			"command": "python",
			"args": [
				"-m",
				"chroma_mcp_server"
			],
			"env": {
				"CHROMA_CLIENT_TYPE": "http",
				"CHROMA_HOST": "localhost",
				"CHROMA_PORT": "8000"
			}
		}
	}
}
